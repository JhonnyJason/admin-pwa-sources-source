// floatingpanel styles
#admin-floatingpanel
    display: none
    position fixed
    box-sizing: border-box
    left: 0
    bottom: 0
    z-index 3333
    background-color alpha(#012, 0.7)
    color white
    padding 5px

#admin-floatingpanel.active
    display block

#admin-floatingpanel
    .link-display-top
        display: flex
        justify-content: space-between
    .link-text
        margin-right 30px
        background-color white
        color #012

    .link-display-lower
        margin-top 5px
        width 100%
    input
        padding 0 5px
        border none
        border-bottom solid 1px white
        box-sizing: border-box
        width 100%
        color white
        margin-bottom 10px